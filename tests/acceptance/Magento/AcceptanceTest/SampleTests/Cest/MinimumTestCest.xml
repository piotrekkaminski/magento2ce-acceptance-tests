<?xml version="1.0" encoding="UTF-8"?>
<!-- Test XML Example -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-acceptance-test-framework/src/Magento/AcceptanceTestFramework/Test/etc/testSchema.xsd">
    <cest name="MinimumFieldsCest">
        <annotations>
            <features value="Minimum Test"/>
            <stories value="Minimum Test"/>
            <group value="generated"/>
            <group value="example"/>
            <env value="chrome"/>
            <env value="firefox"/>
            <env value="phantomjs"/>
        </annotations>
        <after>
            <seeInCurrentUrl url="/admin/admin/" mergeKey="seeInCurrentUrl"/>
        </after>
        <test name="MinimumFieldsTest">
            <amOnUrl url="http://127.0.0.1:32772/admin/" mergeKey="amOnPage"/>
            <fillField selector="#username" userInput="admin" mergeKey="fillField1"/>
            <fillField selector="#login" userInput="123123q" mergeKey="fillField2"/>
            <click selector=".actions .action-primary" mergeKey="clickOnSignIn"/>
        </test>
    </cest>
</config>
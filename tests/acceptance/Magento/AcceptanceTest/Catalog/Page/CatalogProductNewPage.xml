<?xml version="1.0" encoding="utf-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-acceptance-test-framework/src/Magento/AcceptanceTestFramework/Page/etc/pageObject.xsd">
    <page name="CatalogProductNew" area="Adminhtml" mca="catalog/product/new" module="Magento_Catalog">
        <block name="productForm" class="Magento\AcceptanceTest\Catalog\Page\Adminhtml\Block\Product\Edit" locator="[id='page:main-container']">
            <element name="productName" type="input" required="true" locator=".admin__field[data-index=name] input" />
            <element name="productSku" type="input" required="true" locator=".admin__field[data-index=sku] input" />
            <element name="productPrice" type="input" required="true" locator=".admin__field[data-index=price] input" />
            <element name="productUrlKey" type="input" locator=".admin__field[data-index=url_key] input" group="search-engine-optimization" />
        </block>
        <block name="messagesBlock" class="Magento\AcceptanceTest\Catalog\Page\Adminhtml\Block\Product\Edit" locator="#messages .messages" />
        <block name="formPageActions" class="Magento\AcceptanceTest\Catalog\Page\Adminhtml\Block\Product\Edit" locator=".page-main-actions" >
            <element name="saveButton" type="button" locator="#save-button" wait_required="true"/>
        </block>
    </page>
</config>

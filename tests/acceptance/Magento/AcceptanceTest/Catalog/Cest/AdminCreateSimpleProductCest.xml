<?xml version="1.0" encoding="utf-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../../magento2-acceptance-test-framework/src/Magento/AcceptanceTestFramework/Test/etc/testSchema.xsd">
    <cest name="AdminCreateSimpleProductCest">
        <annotations>
            <features value="Simple Product Creation"/>
            <title value="Create a Simple Product via Admin"/>
            <group value="product"/>
            <env value="chrome"/>
            <env value="firefox"/>
            <env value="phantomjs"/>
        </annotations>
        <before>
            <createData entity="_defaultCategory" mergeKey="createPrereqCategory"/>
        </before>
        <test name="AdminCreateSimpleProduct">
            <annotations>
                <title value="You should be able to create a Simple Product in the admin back-end."/>
                <description value="You should be able to create a Simple Product in the admin back-end."/>
                <severity value="CRITICAL"/>
            </annotations>

            <amOnPage url="{{AdminLoginPage.url}}" mergeKey="navigateToAdmin"/>
            <fillField userInput="{{_ENV.MAGENTO_ADMIN_USERNAME}}" selector="{{AdminLoginFormSection.username}}" mergeKey="fillUsername"/>
            <fillField userInput="{{_ENV.MAGENTO_ADMIN_PASSWORD}}" selector="{{AdminLoginFormSection.password}}" mergeKey="fillPassword"/>
            <click mergeKey="clickLogin" selector="{{AdminLoginFormSection.signIn}}"/>
            <amOnPage url="{{AdminProductIndexPage.url}}" mergeKey="navigateToProductIndex"/>
            <click mergeKey="clickAddProductDropdown" selector="{{AdminProductGridActionSection.addProductToggle}}"/>
            <click mergeKey="clickAddSimpleProduct" selector="{{AdminProductGridActionSection.addSimpleProduct}}"/>
            <fillField userInput="{{_defaultProduct.name}}" mergeKey="fillName" selector="{{AdminProductFormSection.productName}}"/>
            <fillField userInput="{{_defaultProduct.sku}}" mergeKey="fillSKU" selector="{{AdminProductFormSection.productSku}}"/>
            <fillField userInput="{{_defaultProduct.price}}" mergeKey="fillPrice" selector="{{AdminProductFormSection.productPrice}}"/>
            <fillField userInput="{{_defaultProduct.quantity}}" mergeKey="fillQuantity" selector="{{AdminProductFormSection.productQuantity}}"/>
            <searchAndMultiSelectOption selector="{{AdminProductFormSection.categoriesDropdown}}" parameterArray="['{{_defaultCategory.name}}']" mergeKey="searchAndSelectCategory"/>
            <click mergeKey="openSeoSection" selector="{{AdminProductSEOSection.sectionHeader}}"/>
            <fillField userInput="{{_defaultProduct.urlKey}}" mergeKey="fillUrlKey" selector="{{AdminProductSEOSection.urlKeyInput}}"/>
            <click mergeKey="saveProduct" selector="{{AdminProductFormActionSection.saveButton}}"/>
            <seeElement mergeKey="assertSaveMessageSuccess" selector="{{AdminProductMessagesSection.successMessage}}"/>
            <seeInField userInput="{{_defaultProduct.name}}" mergeKey="assertFieldName" selector="{{AdminProductFormSection.productName}}"/>
            <seeInField userInput="{{_defaultProduct.sku}}" mergeKey="assertFieldSku" selector="{{AdminProductFormSection.productSku}}"/>
            <seeInField userInput="{{_defaultProduct.price}}" mergeKey="assertFieldPrice" selector="{{AdminProductFormSection.productPrice}}"/>
            <click mergeKey="openSeoSectionAssert" selector="{{AdminProductSEOSection.sectionHeader}}"/>
            <seeInField userInput="{{_defaultProduct.urlKey}}" mergeKey="assertFieldUrlKey" selector="{{AdminProductSEOSection.urlKeyInput}}"/>
            <!-- Go to storefront category page, assert product visibility -->
            <amOnPage url="{{_defaultCategory.name_lwr}}.html" mergeKey="navigateToCategoryPage"/>
            <see userInput="{{_defaultProduct.name}}" mergeKey="assertProductPresent"/>
            <see userInput="{{_defaultProduct.price}}" mergeKey="assertProductPricePresent"/>
            <!-- Go to storefront product page, assert product visibility -->
            <amOnPage url="{{_defaultProduct.urlKey}}.html" mergeKey="navigateToProductPage"/>
            <seeInTitle userInput="{{_defaultProduct.name}}" mergeKey="assertProductNameTitle"/>
            <see userInput="{{_defaultProduct.name}}" mergeKey="assertProductName" selector="{{StorefrontProductInfoMainSection.productName}}"/>
            <see userInput="{{_defaultProduct.price}}" mergeKey="assertProductPrice" selector="{{StorefrontProductInfoMainSection.productPrice}}"/>
            <see userInput="{{_defaultProduct.sku}}" mergeKey="assertProductSku" selector="{{StorefrontProductInfoMainSection.productSku}}"/>
        </test>
        <after>
            <deleteData createDataKey="createPrereqCategory" mergeKey="deletePrereqCategory"/>
        </after>
    </cest>
</config>